{
  "extends": "astro/tsconfigs/strict",
  "include": [
    "src",
    "astro.config.*",
    "env.d.ts",
    "src/types/**/*.d.ts",
    "**/*"
  ],
  "exclude": ["dist"],
  "compilerOptions": {
    "strict": true,
    "target": "ESNext",
    "lib": ["ESNext", "DOM"],
    "module": "ESNext",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "noEmit": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "ignoreDeprecations": "6.0",
    "paths": {
      "@/*": ["src/*"],
      "lib": ["ES2021", "DOM"]
    }
  }
}
